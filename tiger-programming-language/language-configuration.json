{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "##::",
        // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
        "blockComment": [ "[##", "##]" ]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["block ", "/block"],
        // ["block", " : class[]\n\t\n/block"],
        // ["  block", " : class[]\n\t\n/block"],
        // ["      block", " : class[]\n\t\t\n/block"],
        // ["          block", " : class[]\n\t\t\t\n/block"],
        // ["              block", " : class[]\n\t\t\t\t\n/block"],
        // ["                  block", " : class[]\n\t\t\t\t\t\n/block"],
        ["nav-block", " : class[navbar]\n\n\tblock : class[item]\n\t:: Item\n\t/block\n\n\tblock : class[item]\n\t:: Item\n\t/block\n\n\tblock : class[item]\n\t:: Item\n\t/block\n\n/block"],
        ["item", "/item"],
        ["link", "/link"],
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ]
}