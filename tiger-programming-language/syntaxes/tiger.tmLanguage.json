{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Tiger",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment",
				"begin": "\\## :",
				"end": "\\\n",
				"patterns": [
					{
						"name": "comment",
						"match": "\\\\."
					}
				]
			}]
		},
		"keywords": {
			"patterns": [
			{
				"name": "keyword.control.tiger",
				"match": "\\b([a-zA-Z\\/\\.\\-]+) ([a-zA-Z\\/\\.\\-]+)\\b",
				"captures": {
					"1": {
						"name": "entity.name.function"
					},
					"2": {
						"name": "entity.name.type"
					}
				}
			},
			{
				"name": "keyword.control.tiger",
				"match": "\\b([a-zA-Z\\/\\.\\-]+)\\b",
				"captures": {
					"1": {
						"name": "emphasis"
					}
				}
			},
			{
				"name": "string.quoted",
				"begin": "\\::",
				"end": "\\\n",
				"patterns": [
					{
						"name": "string.quoted",
						"match": "\\\\."
					}
				]
			},
			{
				"name": "entity.name.tag",
				"begin": "\\ : ",
				"end": "\\\n",
				"patterns": [
					{
						"name": "entity.name.tag",
						"match": "\\\\."
					}
				]
			}]
		},
		"strings": {
			"name": "string",
			"begin": "\\;",
			"end": "\\;",
			"patterns": [
				{
					"name": "constant.character",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.tgr"
}